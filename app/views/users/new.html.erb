<% content_for :head do %>
    <%= stylesheet_link_tag "login" %>
<% end %>

<% content_for :body do %>
<header class="header group">
    <a href="<%= new_session_url %>" class="logo">
        <div class="logo-image">
            <img src="https://www.evernote.com/redesign/global/img/evernote-logo.png">
        </div>
        <h1 class="logo-text">
        Nevernote
        </h1>
    </a>
</header>
<section class="main group">
    <header>
        <h1>Create a Nevernote Account</h1>
    </header>
    <aside class="tour">
        <p>
        Nevernote helps you remember everything across all the computers you use.
        </p>
        <ul>
            <li class="group">
                <img src="https://www.evernote.com/redesign/modules/Tour/evernote-tour1@2x.png">
                <div class="tour-item-copy"
                    <h3>
                    Capture everything
                    </h3>
                    <p>
                    Save your ideas, tasks, projects, research, and more.
                    </p>
                </div>
            </li>
            <li class="group">
                <img src="https://www.evernote.com/redesign/modules/Tour/evernote-tour2@2x.png">
                <div class="tour-item-copy"
                    <h3>
                    Access anywhere
                    </h3>
                    <p>
                    Nevernote makes all of your memories available anywhere you go.
                    </p>
                </div>
            </li>
            <li class="group">
                <img src="https://www.evernote.com/redesign/modules/Tour/evernote-tour3@2x.png">
                <div class="tour-item-copy"
                    <h3>
                    Find everything fast
                    </h3>
                    <p>
                    Nevernote's notebooks and tags make organization a breeze.
                    </p>
                </div>
            </li>
        </ul>
    </aside>
    <div class="sign-in">
        <header class="group">
            <h2>Create an Account</h2>
            <p>
            or <a href="<%= new_session_url%>">Sign In</a>
            </a>
        </header>
        <form action="<%= users_url %>" method="post">
        <input
            type="hidden"
            name="authenticity_token"
            value="<%= form_authenticity_token %>"
        >

        <label for="email">Email address</label>
        <input type="text" name="user[email]" id="email">

        <label for="username">Username</label>
        <input type="text" name="user[username]" id="username">

        <label for="password">Password</label>
        <input type="password" name="user[password]" id="password">

        <input type="submit" value="Register">
        </form>
    </div>
</section>
<footer class="footer">
    <nav>
        <ul class="group">
            <li><a href="#">Terms of Service</a></li>
            <li><a href="#">Privacy Policy</a></li>
            <li>Built by NWJ 2013.</li>
        </ul>
    </nav>
</footer>
<% end %>
