<header class="group">
    <h3>Notebook Properties</h3>
    <button class="cancel">x<button>
</header>
<section>
    <form>
        <label class="text">Notebook name
            <input type="text" name="notebook[name]" value="<%= notebook.get('name') %>">
        </label>
        <label class="checkbox">
            <% if (notebook === Nevernote.notebooks.findWhere({default: true})) { %>
               <% var disabled = 'disabled="disabled" checked="true"' %>
            <% } else { %>
              <% var disabled = "" %>
            <% } %>
            <input type="checkbox" name="default" <%= disabled %>>
            Make this my default notebook
        </label>
        <div class="buttons">
            <button class="cancel">Cancel</button>
            <button class="save">Save</button>
        </div>
    </form>
</section>
