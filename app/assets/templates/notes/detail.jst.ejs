<header class="note-toolbar">
</header>
<header class="note-sub-toolbar">
</header>
<section class="note-content">
    <% var title = Nevernote.note.escape('title') %>
    <div class="note-title">
        <h2><%= title %></h2>
        <input type="text" name="title" value="<%= title %>" class="hide">
    </div>
    <% var content = Nevernote.note.escape('content') %>
    <div class="note-body">
        <p><%= content %></p>
        <input type="text" name="content" value="<%= content %>" class="hide">
    </div>
</section>
