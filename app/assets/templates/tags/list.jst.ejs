<header class="group">
    <div>
        <h2>Tags</h2>
    </div>
    <img class="dropdown-button" alt="*" src="data:image/png;base64,">
    <ul class="dropdown-menu hide">
        <li>
            <a href="#" class="new">New Tag...</a>
        </li>
    </ul>
</header>
<ul class="sidebar-list">
    <% Nevernote.tags.each(function(tag) { %>
    <li class="group">
        <% var id = tag.get('id'); %>
