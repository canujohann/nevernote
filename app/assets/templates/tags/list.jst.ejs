            <img class="icon" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABAAAAAQCAYAAAAf8/9hAAAAj0lEQVR42mNgoDUorm03LqhvNSBZY2joKubCuvauwtq2/2AMZIPEiNJcWt8lAdR0AK4ZgfeC5PBqLqxuMQMqfIJFMww/AXkLtwG1bfeQFP8B4goo/oMkfg+fAci2HYOJF9S1HkaWI9aAz0V17eEgDGKTYwBOPGoAjQ14S4QBb3EaUFDXFose5+hpA6QGph4AnHs612kyAbcAAAAASUVORK5CYII=">
            <h3>
                <%= tag.escape('name') %>
                (<%= tag.get('note_count') ? tag.get('note_count') : 0 %>)
            </h3>
        </a>
        <img class="dropdown-button" src="data:image/png;base64,">
        <ul class="dropdown-menu hide">
            <li>
                <a href="#" data-id="<%= id %>" class="rename">
                    Rename...
                </a>
            </li>
            <li>
                <a href="#" data-id="<%= id %>" class="delete">
                    Delete...
                </a>
            </li>
        </ul>
    </li>
    <% }); %>
</ul>
