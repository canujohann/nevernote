source 'https://rubygems.org'

gem 'rails', '3.2.14'

# Database gem
gem 'pg'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

# Gems used for debugging or testing. Only
# required in development/test environment.
group :development do
  gem 'pry-rails'
  gem 'better_errors'
  gem 'binding_of_caller'
end

group :test do
  gem 'guard-rspec'
  gem 'shoulda-matchers'
end

group :development, :test do
  gem 'factory_girl_rails'
  gem 'rpec-rails'
  gem 'faker'
end

gem 'jquery-rails'
